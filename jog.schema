attributetype ( 1.3.6.1.4.1.18298.99.2.2
        NAME 'jabberID'
        DESC 'RFC822-style jabber ID'
        EQUALITY caseIgnoreIA5Match
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26{256} )


attributetype ( 1.3.6.1.4.1.18298.99.2.3
        NAME 'sipID'
        DESC 'RFC822-style ID for Session Initation Protocol'
        EQUALITY caseIgnoreIA5Match
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26{256} )


attributetype ( 1.3.6.1.4.1.18298.99.2.4
        NAME 'capricornServer'
        DESC 'The user on which the server can be reached which supports the Capricorn protocol'
        EQUALITY caseIgnoreIA5Match
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26{256})

objectclass (1.3.6.1.4.1.18298.99.1.1 NAME 'JOGperson'
	SUP (inetOrgPerson $ pgpKeyInfo)  STRUCTURAL
	MAY (jabberID $ capricornServer $ sipID $ capricornServer) )